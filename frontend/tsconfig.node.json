{
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "strict": true,
    "isolatedModules": false,
    "types": ["node"],
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["vite.config.ts", "eslint.config.js"],
  "exclude": ["node_modules"]
}
